        .title {
            display: block;
            font-size: 55px;
            font-weight: bold;
            margin-bottom: 50px;
            text-align: center;
        }

        .under-titel {
            display: block;
            font-size: 25px;
            margin-bottom: 50px;
            font-weight: bold;

        }

        .text {
            display: inline-block;
            width: 40%;
            height: auto;
            margin-bottom: 20px;
        }
        .pictures {
            display: inline-block;
            width: 40%;
            height: auto;
            text-align: right;
        }
    </style>



